title          Arch Linux
linux          /vmlinuz-linux
{% if has_intel_cpu %}
initrd         /intel-ucode.img
{% endif %}
initrd         /initramfs-linux.img
options        rd.luks.name={{ luks_device_uuid }}=archroot root=/dev/mapper/archroot rootflags=subvol=@ rw rootfstype=btrfs
{%- if has_resume_params %}
 resume=UUID={{ resume_uuid }} resume_offset={{ resume_offset }}
{%- endif -%}
{%- if disable_ibt %}
 ibt=off
{% endif %}
